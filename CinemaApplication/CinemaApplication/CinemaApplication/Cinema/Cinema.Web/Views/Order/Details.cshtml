@{
}


@model Cinema.Domain.DomainModels.Order

<div class="container">

    <p>
        <a class="btn btn-success">@Model.User.UserName</a>
    </p>

    @for (int i = 0; i < Model.TicketInOrders.Count(); i++)
    {
        var item = Model.TicketInOrders.ElementAt(i).OrderedTicket;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 21rem; height: 15rem;">
                    <div class="card-body">
                        <h3 class="card-title">@item.movieTitle</h3>
                        <h6>Price: @item.Price</h6>
                        <h6>Genre: @item.MovieGenre.ToString()</h6>
                        <h6>Date: @item.Date.ToString()</h6>
                    </div>


                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }

    }
</div>