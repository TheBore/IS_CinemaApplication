@model Cinema.Domain.DTO.AddToShoppingCartDto
@{
    ViewData["Title"] = "AddToShoppingCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Selected Ticket to User Shopping Card:</h1>


<hr />

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddToShoppingCart" method="post">
            <input type="hidden" asp-for="TicketId" />
            <div class="form-group">
                <label asp-for="SelectedTicket.movieTitle"></label>
                <input disabled asp-for="SelectedTicket.movieTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SelectedTicket.Price"></label>
                <input disabled asp-for="SelectedTicket.Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SelectedTicket.MovieGenre"></label>
                <input disabled asp-for="SelectedTicket.MovieGenre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SelectedTicket.Date"></label>
                <input disabled asp-for="SelectedTicket.Date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

